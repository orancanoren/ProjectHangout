<html>
    <head>
        <title>Graph | Profile</title>
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link type="text/css" rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="grey lighten-3">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <header>
            <nav class="light-blue">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="/" class="brand-logo left" id="logo">My Graph</a>
                        <ul id="nav-mobile" class="right">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <h2 class="center" id="title">Graph App</h2>
                    </div>
                    <div class="col s12">
                        <h4 class="center grey-text text-darken-3" id="auth">Profile</h4>
                    </div>
                    <div class="col s12 m6 offset-m3">
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="col s12">
                                        <p class="flow-text center">Welcome</p>
                                        <div class="divider"></div>
                                        <h6 class="right">Info</h6>
                                    </div>
                                    <div class="col s12">
                                        <ul>
                                            <li><strong>First Name </strong> <%= fname %></li>
                                            <li><strong>Last Name </strong> <%= lname %></li>
                                            <li><strong>Birthday </strong> <%= bday %></li>
                                        </ul>
                                        <div class="divider"></div>
                                    </div>
                                    <div class="col s12">
                                        <h6 class="right">Follower info</h6>
                                        <ul>
                                            <li><strong>Followers</strong>
                                            <% if (numFollowers == 0) { %>
                                                No followers
                                            <% } else { %>
                                                <%= numFollowers %>
                                            <% } %>
                                            </li>
                                            <li><strong>Following</strong>
                                            <% if (numFollowing == 0) { %>
                                                No following
                                            <% } else { %>
                                                <%= numFollowing %>
                                            <% } %>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="right">
                                        <a class="waves-effect waves-light btn light-blue" href="/follow">FOLLOW</a>
                                    </div>
                                </div>
                                    
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>

        </footer>
        <%  if (message != null && message.length > 0) { %>
        <script>
            Materialize.toast('<%= message %>', 4000);
        </script>
        <% } %>
    </body>
</html>