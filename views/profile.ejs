<html>
    <head>
        <title>Graph | Profile</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link type="text/css" rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="grey lighten-3">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <header>
            <nav class="light-blue">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="/" class="brand-logo left" id="logo">Project Hangout</a>
                        <ul id="nav-mobile" class="right">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <h2 class="center" id="title">Project Hangout</h2>
                    </div>
                    <div class="col s12">
                        <h4 class="center grey-text text-darken-3" id="auth">Profile</h4>
                    </div>
                    <div class="col s12 m6 offset-m3">
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="col s12">
                                        <p class="flow-text center">Welcome</p>
                                        <div class="divider"></div>
                                        <h6 class="right">Info</h6>
                                    </div>
                                    <% if (email) { %>
                                    <div class="col s12">
                                        <ul>
                                            <li><strong>ID </strong> <%= id %></li>
                                            <li><strong>First Name </strong> <%= fname %></li>
                                            <li><strong>Last Name </strong> <%= lname %></li>
                                            <li><strong>Birthday </strong> <%= bday %></li>
                                            <li><strong>Email </strong> <%= email %></li>
                                            <li><strong>Sex </strong> <%= sex %></li>
                                        </ul>
                                        <div class="divider"></div>
                                        <h6 class="right">Follower info</h6>
                                        <ul>
                                            <li><strong>Followers</strong>
                                            <% if (followers.length == 0) { %>
                                                <br />
                                                You've no followers
                                            <% } else { %>
                                                <ol>
                                                <% for (var i=0; i < followers.length; i++) { %>
                                                    <li><%= followers[i]['first_name'] %> <%= followers[i]['last_name'] %></li>
                                                <% }
                                            }%>
                                                </ol>
                                            </li>
                                            <li><strong>Following</strong>
                                            <% if (following.length == 0) { %>
                                                <br />
                                                You aren't following anybody
                                            <% } else { %>
                                                <ol>
                                                <% for (var i=0; i < following.length; i++) { %>
                                                    <li><%= following[i]['first_name'] %> <%= following[i]['last_name'] %></li>
                                                <% }
                                            }%>
                                                </ol>
                                            </li>
                                        </ul>
                                        <div class="divider"></div>
                                        <h6 class="right">Search friends</h6>
                                        <div class="row">
                                            <form action="/search" method="POST">
                                                <div class="input-field col s8">
                                                    <i class="material-icons prefix">account_circle</i>
                                                    <input id="icon_prefix" type="text" name="searchQuery">
                                                    <label for="icon_prefix">Search</label>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                                    
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>

        </footer>
        <%  if (message != null && message.length > 0) { %>
        <script>
            Materialize.toast('<%= message %>', 4000);
        </script>
        <% } %>
    </body>
</html>